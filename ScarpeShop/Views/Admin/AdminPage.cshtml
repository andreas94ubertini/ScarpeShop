@model IEnumerable<ScarpeShop.Models.Prodotto>
@{
    ViewBag.Title = "AdminPage";
}
<div class="row bg-white mt-4">
    <div class="col-12 text-center p-2">
        @Html.ActionLink("Inserisci nuovo prodotto", "Create", "Admin", new { area = "" }, new { @class = "btn btn-primary rounded-pill" })
    </div>
    <div class="col-12 text-center p-2">
        <h2>Ecco la lista dei prodotti presenti nel Db</h2>
    </div>
    <div class="col-12">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#Id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Disponibile</th>
                    <th scope="col">Prezzo</th>
                    <th scope="col">Azioni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ScarpeShop.Models.Prodotto p in Model)
                {
                    <tr>
                        <th scope="row">@p.IdProdotto</th>
                        <td>@p.Nome</td>
                        <td>@p.Brand</td>
                        <td><i class="@p.SetIcon() ms-1"></i></td>
                        <td>@String.Format("{0:0.00 €}", p.Prezzo)</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a href="~/Admin/Delete/@p.IdProdotto" class="btn btn-danger"><i class="bi bi-trash3-fill"></i></a>
                                <a href="~/Admin/Modify/@p.IdProdotto" class="btn btn-info"><i class="bi bi-pencil"></i></a>
                            </div>

                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
