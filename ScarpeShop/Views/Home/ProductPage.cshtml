@model ScarpeShop.Models.Prodotto

@{
    ViewBag.Title = Model.Nome;
}


<div class="row">
    <div class="col">
        <div class="border border-1 rounded-1 d-flex flex-column flex-md-row align-items-center p-3 mt-5 bg-white">
            <div class="img-cont d-flex flex-column">
                <div class="cover-cont flex-grow-1">
                    <img src="~/Content/sample/@Model.CoverImg" class="cover-img" />
                </div>
                <div class="other-img d-flex p-3 gap-1">
                    <img src="~/Content/sample/@Model.Img1" class="w-50 border border-2" />
                    <img src="~/Content/sample/@Model.Img2" class="w-50 border border-2" />
                </div>
            </div>
            <div class="p-5">
                <h2>@Model.Brand</h2>
                <h3>@Model.Nome</h3>
                <p class="my-5">@Model.Descrizione</p>
                <p>Prezzo: <strong>@String.Format("{0:0.00 €}", Model.Prezzo)</strong></p>
                <p><a class="btn btn-primary rounded-pill"> <i class="bi bi-basket"></i> Aggiungi al carrello</a></p>
            </div>
        </div>
    </div>
</div>

